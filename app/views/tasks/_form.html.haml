= form_for(@task) do |f|
  - if @task.errors.any?
    #error_explanation
      %h2
        = pluralize(@task.errors.count, "error")
        prohibited this task from being saved:
      %ul
        - @task.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :title, 'TITLE'
    = f.text_field :title, class: 'task-title'
  .field.point-radio
    = f.radio_button :point, 1
    = f.label :point, '1pt', for: 'task_point_1'
    = f.radio_button :point, 2
    = f.label :point, '2pt', for: 'task_point_2'
    = f.radio_button :point, 3
    = f.label :point, '3pt', for: 'task_point_3'
    = f.radio_button :point, 5
    = f.label :point, '5pt', for: 'task_point_5'
    = f.radio_button :point, 8
    = f.label :point, '8pt', for: 'task_point_8'
  .field
    = f.label :status, 'STATUS'
    = f.select :status, [['unstarted'],['doing'],['done']]
    %i.icon-chevron-down.select-caret
  .field
    = f.label :memo, 'MEMO'
    = f.text_area :memo, class: 'memo'
  .actions
    %i.icon-arrow-down
    = f.button "#{content_tag(:i, '', class: 'icon-save')}SAVE".html_safe, type: :submit
