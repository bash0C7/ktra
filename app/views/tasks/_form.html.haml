= form_for(@task) do |f|
  - if @task.errors.any?
    #error_explanation
      %h2
        = pluralize(@task.errors.count, "error")
        prohibited this task from being saved:
      %ul
        - @task.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :title
    %br/
    = f.text_field :title
  .field
    = f.label :point
    %br/
    = f.number_field :point
  .field
    = f.label :status
    %br/
    = f.text_field :status
  .field
    = f.label :memo
    %br/
    = f.text_area :memo
  .field
    = f.label :started_at
    %br/
    = f.text_field :started_at
  .field
    = f.label :finished_at
    %br/
    = f.datetime_select :finished_at
  .actions
    = f.submit
